@model Tatakae.Models.User
<script>
    tinymce.init({
        selector: '#address',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>

<div class="contact_form_container">
    <h2 style="text-align:center;">Update Course</h2>
    @if (ViewBag.msg != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @ViewBag.msg </div>
        </div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @TempData["msg"] </div>
        </div>
    }
    @if (Html.ValidationSummary() != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @Html.ValidationSummary()</div>
        </div>
    }
<form id="contact_form" class="contact_form" method="post">

    <div>Name :<input type="text" class="contact_input" name="Name" value="@Model.Name" /></div>
    <div>Email : <input type="email" class="contact_input" name="Email" value="@Model.Email" /></div>
    <div>Password :<input type="password" class="contact_input" name="Password" value="@Model.Password" /></div>
    <div>DOB :<input type="date" class="contact_input" name="Dob" value="@Model.Dob" /></div>
    <div><textarea class="contact_input" name="Address" id="address">@Model.Address</textarea></div>
    <button class="contact_button"><span>Update</span><span class="button_arrow"><i class="fa fa-angle-right" aria-hidden="true"></i></span></button>
</form>
</div>
