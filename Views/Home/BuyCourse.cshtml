@model Tatakae.Models.Cours
@{
    ViewBag.Title = "BuyCourse";
}


<div class="about">
    @if (ViewBag.msg != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @ViewBag.msg </div>
        </div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @TempData["msg"] </div>
        </div>
    }
    <div class="container">
        <div class="row about_row row-lg-eq-height">
            <div class="col-lg-6 order-lg-1 order-2">
                <div class="about_image"><img src="/images/about_1.jpg" alt=""></div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1">
                <div class="about_content">
                    <div class="about_title">@Model.CoursesName</div>
                    <div class="about_text">
                        <p>@Html.Raw(Model.Description)</p>
                        <p>Duration : @Model.Duration months</p>
                        <p>Price : Rs.@Model.Price</p>
                        <div class="course_tag"><a href="/Home/Buy/@Model.CId">Buy</a></div>
                        <button class="contact_button"><span>Add</span><span class="button_arrow"><i class="fa fa-angle-right" aria-hidden="true"></i></span></button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

