
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact_form_container">
    <h2 style="text-align:center;">Login Page</h2>
    @if (ViewBag.msg != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @ViewBag.msg </div>
        </div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @TempData["msg"] </div>
        </div>
    }
    @if (Html.ValidationSummary() != null)
    {
        <div class="container">
            <div class="alert alert-warning"> @Html.ValidationSummary()</div>
        </div>
    }

    <form action="#" id="contact_form" class="contact_form" method="post">

        <div>Username :<input type="email" class="contact_input" required="required" name="email"></div>
        <div>Password :<input type="password" class="contact_input" required="required" name="password"></div>
        <button class="contact_button"><span>Login</span><span class="button_arrow"><i class="fa fa-angle-right" aria-hidden="true"></i></span></button>
    </form>
</div>



